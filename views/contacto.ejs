<!-- ! =================  head ================ -->

<%- include('./partials/head.ejs', {title: 'Inicio' , url: './images/CNI_Marchando.webp' })%>

    <body>
        <!-- ! =================  Navigation ================ -->
        <%- include('./partials/header.ejs') %>


            <!-- contenido #1 el titulo -->
            <div style="height: 780px;"
                class="cni_populars_topics cni_populars_topics2 cni_populars_topics_about pb---80">
                <div class="container">
                    <div class="principal">
                        <div class="c-principal">
                            <img class="hero3__shape-1 imagen-izquierda" src="/images/logo.webp"
                                alt="Banner shape image">
                            <div class="texto-derecha">
                                <h1>Contacto</h1>
                                <h2>Llena el formulario para contactarno</h2>
                                <a style="margin-top: 50px;" href="#" class="vs-btn wave-btn mt-60">Infórmate</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contenido #8 contacto -->
            <div style="background-color: #F2F1EF;" id="cni-contact" class="cni-contact-page pt---60">
                <div class="container">
                    <div class="row pb---96">
                        <div class="col-lg-4 pt---10">
                            <ul class="address-sec">
                                <li>
                                    <em class="icon"><img width="50px" src="/images/logo.webp" alt="image"></em>
                                    <span class="text"><em>Ciudad</em> San Vicente</span>
                                </li>
                                <li>
                                    <em class="icon"><img width="50px" src="/images/logo.webp" alt="image"></em>
                                    <span class="text"><em>Contacto</em> <a href="#">Celular: 9999</a> <a href="#">Email
                                            Vallegrande.edu.pe</a></span>
                                </li>
                                <li>
                                    <em class="icon"><img width="50px" src="/images/logo.webp" alt="image"></em>
                                    <span class="text"><em>Horarios</em> Lunes a Sabado 8:00 am - 12:00pm</span>
                                </li>
                            </ul>
                        </div>
                        <div class="col-lg-8">
                            <div class="cni-blog-form">
                                <h2 class="contact-title">Preguntas? <br> Puedes contactarnos.
                                </h2>
                                <div id="blog-form" class="blog-form">
                                    <div id="form-messages"></div>
                                    <form id="contact-form" action="/contactar" method="post" novalidate>
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="back-input">
                                                    <input type="text" name="nombre_completo" id="nombre_completo"
                                                        placeholder="Nombre Completo">
                                                </div>
                                            </div>
                                            <div class="col-lg-6 pdl-5">
                                                <div class="back-input">
                                                    <input type="email" name="correo_electronico"
                                                        id="correo_electronico" placeholder="Email" pattern=".*"
                                                        novalidate>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="back-input">
                                                    <input type="text" name="asunto" id="asunto" placeholder="Asunto"
                                                        required>
                                                </div>
                                            </div>
                                            <div class="col-lg-6 pdl-5">
                                                <div class="back-input">
                                                    <input type="text" name="numero_celular" placeholder="Celular"
                                                        id="numero_celular">
                                                </div>
                                            </div>
                                            <div class="col-lg-12">
                                                <div class="back-textarea">
                                                    <textarea name="contenido_mensaje" id="contenido_mensaje"
                                                        placeholder="Mensaje" required></textarea>
                                                </div>
                                            </div>
                                            <div class="col-lg-12">
                                                <button type="submit" class="vs-btn wave-btn">Enviar<svg
                                                        xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                                        viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                                        stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                                                        class="feather feather-arrow-right">
                                                        <line x1="5" y1="12" x2="19" y2="12"></line>
                                                        <polyline points="12 5 19 12 12 19"></polyline>
                                                    </svg></button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="accordion__area p-relative pt---90">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="accordion__wrapper">
                                <div class="accordion__wrapper-1">
                                    <h6>CNI</h6>
                                    <h2>Preguntas Frecuentes</h2>
                                    <img width="60%" src="/images/CNI_Marchando.webp" alt="" style="
    padding-bottom: 15px;
">

                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="accordion__wrapper1">
                                <div class="accordion " id="accordionExample">
                                    <div class="accordion-item">
                                        <h2 class="accordion-header" id="headingOne">
                                            <button class="accordion-button" type="button" data-bs-toggle="collapse"
                                                data-bs-target="#collapseOne" aria-expanded="true"
                                                aria-controls="collapseOne"> ¿Cuáles son los programas académicos que
                                                ofrecemos?</button>
                                        </h2>
                                        <div id="collapseOne" class="accordion-collapse collapse show"
                                            aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                                            <div class="accordion-body">
                                                <p>Ofrecemos programas para toda secundaria, con un enfoque en materias
                                                    fundamentales y actividades extracurriculares que enriquecen la
                                                    experiencia educativa.
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="accordion-item">
                                        <h2 class="accordion-header" id="headingTwo">
                                            <button class="accordion-button collapsed" type="button"
                                                data-bs-toggle="collapse" data-bs-target="#collapseTwo"
                                                aria-expanded="false" aria-controls="collapseTwo">
                                                ¿Cuál es nuestra filosofía de educación?
                                            </button>
                                        </h2>
                                        <div id="collapseTwo" class="accordion-collapse collapse"
                                            aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
                                            <div class="accordion-body">
                                                <p>Nuestra filosofía se basa en el respeto, la inclusión, el aprendizaje
                                                    activo y la promoción de valores como la responsabilidad y la
                                                    empatía.</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="accordion-item">
                                        <h2 class="accordion-header" id="headingThree">
                                            <button class="accordion-button collapsed" type="button"
                                                data-bs-toggle="collapse" data-bs-target="#collapseThree"
                                                aria-expanded="false" aria-controls="collapseThree">
                                                ¿Cuál es nuestro enfoque en la preparación para la educación superior?
                                            </button>
                                        </h2>
                                        <div id="collapseThree" class="accordion-collapse collapse"
                                            aria-labelledby="headingThree" data-bs-parent="#accordionExample">
                                            <div class="accordion-body">
                                                <p>Preparamos a nuestros estudiantes para el éxito en la educación
                                                    superior al proporcionar una base académica sólida y orientación en
                                                    el proceso de admisión.
                                                </p>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

    <!-- ! =================  Footer ================ -->
    <%- include('./partials/footer.ejs')%>
