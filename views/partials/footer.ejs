  <span aria-hidden="true" class="arrow_carrot-up"></span>
</div>

<script>
  const carrusel = document.querySelector(".carrusel-items");

  let intervalo = null;

  const start = () => {
    if (carrusel.scrollWidth <= carrusel.clientWidth) {
      return; // No hay necesidad de animar si todos los elementos caben en la pantalla
    }

    intervalo = setInterval(function () {
      carrusel.scrollLeft += 1;

      if (carrusel.scrollLeft >= carrusel.scrollWidth - carrusel.clientWidth) {
        carrusel.scrollLeft = 0;
      }
    }, 10);
  };

  const stop = () => {
    clearInterval(intervalo);
  };

  carrusel.addEventListener("mouseover", () => {
    stop();
  });

  carrusel.addEventListener("mouseout", () => {
    start();
  });

  start();
</script>
